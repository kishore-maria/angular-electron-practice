{
  "appId": "com.yourdoamnin.yourapp",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*",
    {
      "from": "myapp",
      "to": "myapp"
    }
  ],
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "nsis",
    "icon": "assets/appIcon.ico"
  },
  "msi": {
    "shortcutFolderName": "MyApp",
    "targetDir": "C:\\Program Files (x86)\\angular-electron-practice\\app-1.0.0",
    "name": "MyApp",
    "startMenuShortcutName": "MyApp",
    "shortcutName": "MyApp"
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg"
  }
}